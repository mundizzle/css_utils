    "alias": "p",
    "values": [5, 10, 15, 20]
  },
  "margin": {
    "alias": "m",
    "values": [4, 8, 12, 16]
  },
  "display": {
    "alias": "d"
  },
  "color": {
    "alias": "c",
    "values": ["red", "blue", "green"]
  },
  "background_color": {
